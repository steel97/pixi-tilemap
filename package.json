{
  "name": "@pixi/tilemap",
  "version": "4.0.0",
  "description": "A low-level, optimized rectangular tilemap implementation for PixiJS.",
  "author": "Ivan Popelyshev",
  "contributors": [
    "Ivan Popelyshev <ivan.popelyshev@gmail.com>",
    "Shukant Pal <shukant@pixijs.io>"
  ],
  "main": "./dist/pixi-tilemap.js",
  "module": "./lib/pixi-tilemap.es.js",
  "bundle": "./dist/pixi-tilemap.umd.js",
  "namespace": "PIXI.tilemap",
  "types": "./index.d.ts",
  "homepage": "http://www.rpgmakerweb.com/",
  "bugs": "https://github.com/pixijs/pixi-tilemap/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixijs/pixi-tilemap.git"
  },
  "scripts": {
    "cleanup": "rimraf dist && mkdirp dist && rimraf lib && mkdirp lib && rimraf compile",
    "prestart": "yarn cleanup",
    "start": "parallelshell \"yarn watch\"",
    "watch": "tsc -w",
    "prebuild": "yarn cleanup",
    "build": "rollup -c node_modules/@pixi-build-tools/rollup-configurator/index.js && yarn build:types",
    "build:types": "rimraf ./compile && tsc -p ./tsconfig.compile.json && api-extractor run",
    "docs": "typedoc --out ./docs/ --readme README.md ./src/",
    "lint": "eslint ./src",
    "unit-test": "floss --path test -- --enable-logging",
    "prepare": "rollup -c node_modules/@pixi-build-tools/rollup-configurator/index.js && yarn build:types"
  },
  "eslintConfig": {
    "extends": [
      "@pixi/eslint-config"
    ],
    "rules": {
      "linebreak-style": "off"
    },
    "ignorePatterns": [
      "lib",
      "dist"
    ]
  },
  "files": [
    "dist/",
    "lib/",
    "index.d.ts",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "peerDependencies": {
    "@pixi/core": "^7.0.4",
    "@pixi/display": "^7.0.4",
    "@pixi/graphics": "^7.0.4"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.34.3",
    "@pixi-build-tools/rollup-configurator": "~1.0.14",
    "@pixi/core": "^7.0.4",
    "@pixi/display": "^7.0.4",
    "@pixi/eslint-config": "^4.0.1",
    "@pixi/extract": "^7.0.4",
    "@pixi/graphics": "^7.0.4",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/eventemitter3": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "chai": "^4.3.7",
    "del": "^7.0.0",
    "electron": "^13.6.6",
    "eslint": "^8.33.0",
    "floss": "^5.0.1",
    "mkdirp": "^2.1.3",
    "parallelshell": "^3.0.2",
    "relative-deps": "^1.0.6",
    "rimraf": "^4.1.2",
    "rollup": "^2.23.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}